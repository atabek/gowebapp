{{define "title"}}Student Clock IN{{end}}
{{define "head"}}{{end}}
{{define "content"}}

<div class="container">
	<div class="page-header">
		<h1>{{template "title" .}}</h1>
	</div>

	<form id="form" method="post">
		<div class="form-group">
			<label for="note">Clockin</label>
			<div><input type="text" class="form-control" id="studentID" name="studentID"
				placeholder="Enter student ID here..." value="">
			</div>
		</div>

		<a title="Save" class="btn btn-success" role="submit" onclick="document.getElementById('form').submit();">
			<span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Submit
		</a>
		<a title="Back to Notepad" class="btn btn-danger" role="button" href="{{$.BaseURI}}clockin">
			<span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span> Back
		</a>

		<input type="hidden" name="token" value="{{.token}}">
	</form>

	{{template "footer" .}}
</div>

{{end}}
{{define "foot"}}{{end}}
